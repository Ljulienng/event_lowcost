  <div class="alert alert-danger" role="alert">

    <% if @event.errors.any? %>
      <p>Event could not be created for the following reasons :</p>
      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    
  </div>



<body>  


  
  <div class="card w-75">
  	<div class = "card-header">
  		<h1 style="text-align: center">New Event</h1>
  	</div>
    <div class="card-body">
      <%= form_tag url_for(action: 'create'), method: "post" do %>

        <%= label_tag 'Title' %>
        <%= text_field_tag 'title', @event.title, :class => "form-control" %>
        <br />

        <%= label_tag 'Description' %>
        <%= text_field_tag 'description', @event.description, :class => "form-control" %>
        <br />

        <%= label_tag 'Location' %>
        <%= text_field_tag 'location', @event.location, :class => "form-control" %>
        <br />

        <%= label_tag 'Start date' %>
        <%= text_field_tag 'start_date', @event.start_date, :class => "form-control" %>
        <br />

        <%= label_tag 'Duration' %>
        <%= text_field_tag 'duration', @event.duration, :class => "form-control" %>
        <br />

        <%= label_tag 'Price' %>
        <%= text_field_tag 'price', @event.price, :class => "form-control" %>
        <br /> <br />

        <%= submit_tag "Create event", :class => "btn btn-dark" %>

      <% end %>
    </div>
  </div>

</body>

